<body class="home">
<%= render "shared/shortheader" %>
<div class="contents">
<div class="inner">

<section>
<h2>簡易検索BOX</h2>
<%= form_with(url: search_novels_path, local: true, method: :get) do |form| %>
  <%= form.text_field :keyword, placeholder: "作品タイトル・作者名から検索する" %>
  <%= form.submit "検索" , class:"searchbtn" %>
<% end %><br>
<%= form_with(url: search_areas_path, local: true, method: :get) do |form| %>
  <%= form.text_field :keyword, placeholder: "地域名から検索する" %>
  <%= form.submit "検索" , class:"searchbtn" %>
<% end %>
</section>

<section>
<h2>検索結果</h2>
<ul>
<% count = 0 %>
<% @novels[0].each do |novel| %>
  <% country = novel.areas&.first&.country %>
  <% prefecture = novel.areas&.first&.prefecture %>
  <% city = novel.areas&.first&.city %>
  <li><div class="box2">
  <h4><%= link_to novel.title,  novel_path(novel.id) %></h4>
  <p>著者名: <%= novel.auther %><br>
      発売年: <br>
      舞台:<%= country %>
          <% if prefecture != nil %>
            <%= prefecture %>
          <% end %>
          <% if city != nil %>
            <%= city %>
          <% end %>
          <% if novel.another_area != nil || novel.another_area != "" %>
            <%= novel.another_area %>
          <% end %><br>
          </p>
        <% count += 1 %>
      </div>
<% end %></li>
</ul>


</section>
</div>
<!--/.inner-->
</div>
<!--/.contents-->

<%= render "shared/footer" %>