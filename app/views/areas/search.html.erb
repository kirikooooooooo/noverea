<body class="home">
<%= render "shared/shortheader" %>
<div class="contents">
<div class="inner">

<section>
<h2>簡易検索BOX</h2>
<%= render "shared/simplesearch" %>
</section>

<section>
<h2>検索結果</h2>
<ul>
<% count = 0 %>
<% @novels.each do |novel| %>
  <% novel.each do |novel| %>
    <% country = novel.areas&.first&.country %>
    <% prefecture = novel.areas&.first&.prefecture %>
    <% city = novel.areas&.first&.city %>
    <li><div class="box2">
    <h4><%= link_to novel.title,  novel_path(novel.id) %></h4>
    <p>著者名: <%= novel.auther %><br>
        発売年: <br>
        舞台:<%= country %>
            <% if prefecture != nil %>
              <%= prefecture %>
            <% end %>
            <% if city != nil %>
              <%= city %>
            <% end %>
            <% if novel.another_area != nil || novel.another_area != "" %>
              <%= novel.another_area %>
            <% end %><br>
            </p>
          <% count += 1 %>
        </div>
    <% end %>
<% end %></li>
</ul>


</section>
</div>
<!--/.inner-->
</div>
<!--/.contents-->

<%= render "shared/footer" %>