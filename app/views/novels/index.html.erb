<body class="home">
<%= render "shared/header" %>
<div class="contents">
<div class="inner">

	<section>
  <h2>簡易検索</h2>
	<h2 class="simple">検索Box</h2>
	<p class="c">ここに検索Boxを設置する</p>

	</section>

</div>
<!--/.inner-->
</div>
<!--/.contents-->

<div class="contents bg2">
<div class="inner">

	<section>
	<h2>投稿作品一覧</h2>

	<ul>
	<% @novels.each do |novel| %>
		<% country = novel.areas&.first&.country %>
		<% prefecture = novel.areas&.first&.prefecture %>
		<% city = novel.areas&.first&.city %>
			<li><div class="box2">
			<span class="date">new</span>
			<h4><%= novel.title %></h4>
			<p>著者名: <%= novel.auther %><br>
				発売年: <%= novel.release_year %><br>
				舞台:<%= country %>
						<% if prefecture != nil %>
							<%= prefecture %>
						<% end %>
						<% if city != nil %>
							<%= city %>
						<% end %>
						</p>
		<% end %></li>
	</ul>
	</div>

	<div class="contents bg2">
		<div class="inner">
			<%= paginate @novels %>
		</div>
	</div>
	
	</section>

</div>
<!--/.inner-->
</div>
<!--/.contents-->

<%= render "shared/footer" %>

</body>
</html>
